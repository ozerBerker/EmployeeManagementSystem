@model EmployeeManagementSystem.Models.Personnel
@{
    ViewData["Title"] = "AddPers";
}

<h1>AddPers</h1>

<form class="form-group my-5" method="post">

    @Html.LabelFor(x=>x.PersName)
    @Html.TextBoxFor(x=>x.PersName,   new {@class="form-control"})
    @Html.LabelFor(x=>x.DepId)
    @Html.DropDownListFor(x=>x.DepId, (List<SelectListItem>)ViewBag.departments, new {@class="form-control"})

    <button class="btn btn-primary">Add Personnel</button>
</form>